{
  "$schema": "http://json.schemastore.org/template",
  "author": "Muhammad Raslan",
  "classifications": ["Web", "API", "DDD", "Clean Architecture", "Angular"],
  "identity": "DDD.Pattern.Template",
  "name": "DDD Pattern Template",
  "shortName": "engrslan-ddd",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Engrslan",
  "preferNameDirectory": true,
  "symbols": {
    "UseAngular": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": true,
      "description": "Include Angular frontend application"
    },
    "UseDocker": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": true,
      "description": "Include Docker support"
    },
    "IncludeSampleCode": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": true,
      "description": "Include sample entities and services"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Skip restore of packages on project creation",
      "defaultValue": true
    },
    "UseIdentity": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Remove Id Server and security",
      "defaultValue": true
    },
    "HttpApiHttpPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "fallback": 5141
      },
      "replaces": 5141
    },
    "HttpApiHttpsPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "fallback": 7228
      },
      "replaces": 7228
    },
    "IdentityHttpPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "fallback": 5213
      },
      "replaces": 5213
    },
    "IdentityHttpsPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "fallback": 7222
      },
      "replaces": 7222
    },
    "EnableHealthChecks": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": true,
      "description": "Enable Health Checks"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!UseIdentity)",
          "exclude": [
            "src/Identity/**/*",
            "src/HttpApi/Features/Samples/Secure/**/*",
            "src/EfCore/Schemas/UserDbSchema.cs",
            "src/EfCore/IdentityDataContext.cs",
            "src/Domain/Identity/**/*"
          ]
        },
        {
          "condition": "(!UseAngular)",
          "exclude": [
            "src/HttpApi.Host/ClientApp/**/*"
          ]
        },
        {
          "condition": "(!UseDocker)",
          "exclude": [
            "**/Dockerfile",
            "**/.dockerignore",
            "**/docker-compose.*"
          ]
        },
        {
          "condition": "(!IncludeSampleCode)",
          "exclude": [
            "**/Sample*.cs",
            "**/Example*.cs",
            "**/Dtos/SampleDto.cs",
            "**/Services/ExampleService.cs",
            "**/Validators/CreateSampleDtoValidator.cs",
            "**/Validators/UpdateSampleDtoValidator.cs"
          ]
        },
        {
          "condition": "(!EnableHealthChecks)",
          "exclude": [
            "**/HealthChecks/**/*"
          ]
        },
        {
          "exclude": [
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            ".template.config/**",
            "**/*.filelist",
            "**/*.user",
            "**/*.lock.json",
            ".git/**",
            ".vs/**",
            "**/.vscode/**",
            "**/node_modules/**",
            "**/dist/**",
            "**/.angular/**",
            "**/DDD.Pattern.Template.nuspec",
            "**/TEMPLATE_README.md",
            "**/logs/**"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "condition": "(!skipRestore && UseAngular)",
      "description": "Restore npm packages",
      "manualInstructions": [
        {
          "text": "Run 'npm install' in the ClientApp folder"
        }
      ],
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "npm",
        "args": "install",
        "workingDirectory": "src/HttpApi.Host/ClientApp"
      },
      "continueOnError": true
    }
  ],
  "primaryOutputs": [
    {
      "path": "Engrslan.sln"
    }
  ]
}