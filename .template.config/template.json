{
  "$schema": "http://json.schemastore.org/template",
  "author": "Muhammad Raslan",
  "classifications": ["Web", "API", "DDD", "Clean Architecture", "Angular"],
  "identity": "DDD.Pattern.Template",
  "name": "DDD Pattern Template",
  "shortName": "ddd-template",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "CertManager",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net9.0",
          "description": ".NET 9.0"
        },
        {
          "choice": "net8.0",
          "description": ".NET 8.0"
        },
        {
          "choice": "net7.0",
          "description": ".NET 7.0"
        },
        {
          "choice": "net6.0",
          "description": ".NET 6.0"
        }
      ],
      "defaultValue": "net9.0",
      "replaces": "net9.0"
    },
    "UseAngular": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include Angular frontend application"
    },
    "UseDocker": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include Docker support"
    },
    "IncludeSampleCode": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include sample entities and services"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Skip restore of packages on project creation",
      "defaultValue": "true"
    },
    "HttpPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 5000,
        "high": 5300
      },
      "replaces": "5141"
    },
    "HttpsPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 7000,
        "high": 7300
      },
      "replaces": "7228"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!UseAngular)",
          "exclude": [
            "CertManager.Host/ClientApp/**/*"
          ]
        },
        {
          "condition": "(!UseDocker)",
          "exclude": [
            "**/Dockerfile",
            "**/.dockerignore",
            "**/docker-compose.*"
          ]
        },
        {
          "condition": "(!IncludeSampleCode)",
          "exclude": [
            "**/Sample*.cs",
            "**/Example*.cs",
            "**/Dtos/SampleDto.cs",
            "**/Services/ExampleService.cs",
            "**/Validators/CreateSampleDtoValidator.cs",
            "**/Validators/UpdateSampleDtoValidator.cs"
          ]
        },
        {
          "exclude": [
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            ".template.config/**",
            "**/*.filelist",
            "**/*.user",
            "**/*.lock.json",
            ".git/**",
            ".vs/**",
            ".vscode/**",
            "node_modules/**",
            "**/dist/**",
            "**/.angular/**",
            "**/DDD.Pattern.Template.nuspec",
            "**/TEMPLATE_README.md"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "condition": "(!skipRestore && UseAngular)",
      "description": "Restore npm packages",
      "manualInstructions": [
        {
          "text": "Run 'npm install' in the ClientApp folder"
        }
      ],
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "npm",
        "args": "install",
        "workingDirectory": "CertManager.Host/ClientApp"
      },
      "continueOnError": true
    }
  ],
  "primaryOutputs": [
    {
      "path": "CertManager.sln"
    }
  ]
}