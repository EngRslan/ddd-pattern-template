@page
@model Engrslan.Identity.Pages.Account.LoginWithRecoveryCode
@{
    ViewData["Title"] = "Recovery Code Verification";
}

<div class="container-fluid h-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 420px; width: 100%;">
        <div class="card-body">
            <div class="text-center mb-4">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle text-white mb-3" style="width: 60px; height: 60px; background: linear-gradient(135deg, #4c5fd5 0%, #5a4a8a 100%) !important;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M2 1a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l4.586-4.586a1 1 0 0 0 0-1.414l-7-7A1 1 0 0 0 6.586 1H2zm4 3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                    </svg>
                </div>
                <h1 class="h3 fw-bold text-dark">Recovery Code</h1>
                <p class="text-muted">You can log in with a recovery code if you've lost access to your authenticator app</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger rounded-3" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small" role="alert"></div>
                <input asp-for="ReturnUrl" type="hidden" />

                <div class="mb-4">
                    <label asp-for="Input.RecoveryCode" class="form-label">Recovery Code</label>
                    <input asp-for="Input.RecoveryCode" class="form-control form-control-lg text-center rounded-3" 
                           type="text" 
                           placeholder="00000-00000" 
                           autocomplete="off" 
                           autofocus />
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger small"></span>
                    <div class="form-text text-muted small mt-2">
                        Enter one of your recovery codes
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold mb-3">
                    Log in
                </button>

                <div class="text-center">
                    <p class="mb-2">
                        <a asp-page="./LoginWith2fa" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                            Use authenticator app instead
                        </a>
                    </p>
                    <p class="mb-0">
                        <a asp-page="./Login" class="text-decoration-none text-muted">
                            Back to login
                        </a>
                    </p>
                </div>
            </form>

            <div class="alert alert-warning mt-4 small" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                    <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z"/>
                    <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z"/>
                </svg>
                <strong>Important:</strong> Using a recovery code will permanently invalidate it. Store your remaining codes securely.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}