@page
@model Engrslan.Identity.Pages.Account.ResetPasswordConfirmation
@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<div class="container-fluid h-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 420px; width: 100%;">
        <div class="card-body text-center">
            <div class="d-inline-flex align-items-center justify-content-center rounded-circle text-white mb-4" 
                 style="width: 80px; height: 80px; background: linear-gradient(135deg, #52c234 0%, #061700 100%);">
                <i class="bi bi-check-circle-fill" style="font-size: 2rem;"></i>
            </div>
            
            <h1 class="h3 fw-bold text-dark mb-3">Password Reset Successful!</h1>
            
            <div class="alert alert-success" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                Your password has been reset successfully.
            </div>
            
            <p class="text-muted mb-4">
                You can now sign in with your new password. Please keep your password secure and don't share it with anyone.
            </p>
            
            <div class="bg-light rounded p-3 mb-4">
                <h6 class="text-dark mb-2">Security Tips:</h6>
                <ul class="text-start text-muted small mb-0">
                    <li>Use a unique password for each account</li>
                    <li>Enable two-factor authentication for extra security</li>
                    <li>Never share your password with anyone</li>
                </ul>
            </div>
            
            <div class="d-grid">
                <a asp-page="./Login" class="btn btn-primary rounded-3">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In Now
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.98);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 0.75rem;
            font-weight: 500;
            transition: transform 0.2s;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
    </style>
}