@page
@model Engrslan.Identity.Pages.Account.Manage.EnableAuthenticator
@{
    ViewData["Title"] = "Configure Authenticator App";
    Layout = "_ManageLayout";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        @if (Model.StatusMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="alert alert-info" role="alert">
            <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Set Up Your Authenticator App</h5>
            <p>To use an authenticator app for two-factor authentication, follow these steps:</p>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Step 1: Download an Authenticator App</h5>
                        <p>If you don't have one already, download an authenticator app such as:</p>
                        <div class="row">
                            <div class="col-md-6">
                                <ul>
                                    <li><strong>Microsoft Authenticator</strong> (iOS, Android)</li>
                                    <li><strong>Google Authenticator</strong> (iOS, Android)</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul>
                                    <li><strong>Authy</strong> (iOS, Android, Desktop)</li>
                                    <li><strong>1Password</strong> (iOS, Android, Desktop)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Step 2: Scan the QR Code or Enter the Key</h5>
                        <p>Open your authenticator app and scan this QR code, or manually enter the key below:</p>
                        
                        <div class="row">
                            <div class="col-md-6 text-center">
                                <div id="qrCode" class="mb-3"></div>
                                <p class="text-muted">Scan this QR code with your app</p>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Manual Entry Key:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control font-monospace" value="@Model.SharedKey" readonly id="sharedKey">
                                        <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard()">
                                            <i class="bi bi-clipboard"></i> Copy
                                        </button>
                                    </div>
                                    <small class="text-muted">Spaces are for readability. They can be entered or omitted.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Step 3: Verify Your Authenticator</h5>
                        <p>Enter the 6-digit verification code from your authenticator app:</p>
                        
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Input.Code" class="form-label"></label>
                                        <input asp-for="Input.Code" class="form-control form-control-lg text-center font-monospace" 
                                               placeholder="000000" maxlength="7" autocomplete="off" />
                                        <span asp-validation-for="Input.Code" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-2"></i>Verify and Enable 2FA
                            </button>
                            <a asp-page="./TwoFactorAuthentication" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
    <script>
        // Generate QR Code
        new QRCode(document.getElementById("qrCode"), {
            text: "@Html.Raw(Model.AuthenticatorUri)",
            width: 200,
            height: 200,
            colorDark: "#000000",
            colorLight: "#ffffff",
            correctLevel: QRCode.CorrectLevel.M
        });

        // Copy to clipboard function
        function copyToClipboard() {
            var copyText = document.getElementById("sharedKey");
            copyText.select();
            copyText.setSelectionRange(0, 99999); // For mobile devices
            navigator.clipboard.writeText(copyText.value);
            
            // Show feedback
            var button = event.currentTarget;
            var originalHTML = button.innerHTML;
            button.innerHTML = '<i class="bi bi-check"></i> Copied!';
            button.classList.remove('btn-outline-secondary');
            button.classList.add('btn-success');
            
            setTimeout(function() {
                button.innerHTML = originalHTML;
                button.classList.remove('btn-success');
                button.classList.add('btn-outline-secondary');
            }, 2000);
        }

        // Format input as user types
        document.getElementById('Input_Code').addEventListener('input', function(e) {
            var value = e.target.value.replace(/\s/g, '');
            if (value.length > 3) {
                e.target.value = value.slice(0, 3) + ' ' + value.slice(3);
            }
        });
    </script>
}