@page
@model Engrslan.Identity.Pages.Account.Lockout
@{
    ViewData["Title"] = "Account Locked";
}

<div class="container-fluid h-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 420px; width: 100%;">
        <div class="card-body text-center">
            <div class="d-inline-flex align-items-center justify-content-center rounded-circle text-white mb-4" style="width: 80px; height: 80px; background: linear-gradient(135deg, #dc3545 0%, #c82333 100%) !important;">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                </svg>
            </div>
            
            <h1 class="h3 fw-bold text-dark mb-3">Account Locked</h1>
            
            <div class="alert alert-danger" role="alert">
                <p class="mb-0">
                    Your account has been temporarily locked due to multiple failed login attempts.
                </p>
            </div>
            
            <p class="text-muted mb-4">
                This is a security measure to protect your account from unauthorized access. 
                Please try again later or contact support if you need immediate assistance.
            </p>
            
            <div class="d-grid gap-2">
                <a asp-page="./Login" class="btn btn-outline-primary rounded-3">
                    Back to Login
                </a>
                <a href="mailto:support@certmanager.com" class="btn btn-link text-decoration-none">
                    Contact Support
                </a>
            </div>
        </div>
    </div>
</div>