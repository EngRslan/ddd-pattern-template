@page
@model CertManager.Identity.Pages.Account.Manage.TwoFactorAuthentication
@{
    ViewData["Title"] = "Two-Factor Authentication";
    Layout = "_ManageLayout";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        @if (Model.StatusMessage != null)
        {
            <div class="alert alert-@(Model.StatusMessage.StartsWith("Error") ? "danger" : "success") alert-dismissible fade show" role="alert">
                @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.Is2faEnabled)
        {
            <div class="alert alert-success" role="alert">
                <h5 class="alert-heading"><i class="bi bi-shield-check me-2"></i>2FA is Enabled</h5>
                <p>Two-factor authentication is currently enabled on your account for enhanced security.</p>
            </div>

            @if (Model.RecoveryCodesLeft == 0)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>You have no recovery codes left.</strong>
                    <p>You must generate a new set of recovery codes before you can log in with a recovery code.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="alert alert-warning" role="alert">
                    <strong>You have 1 recovery code left.</strong>
                    <p>You should generate a new set of recovery codes.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="alert alert-warning" role="alert">
                    <strong>You have @Model.RecoveryCodesLeft recovery codes left.</strong>
                    <p>You should generate a new set of recovery codes soon.</p>
                </div>
            }

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Authenticator App</h5>
                            @if (Model.HasAuthenticator)
                            {
                                <p class="card-text text-success"><i class="bi bi-check-circle me-2"></i>Configured</p>
                                <a asp-page="./ResetAuthenticator" class="btn btn-warning">Reset Authenticator</a>
                            }
                            else
                            {
                                <p class="card-text">Not configured</p>
                                <a asp-page="./EnableAuthenticator" class="btn btn-primary">Setup Authenticator</a>
                            }
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Recovery Codes</h5>
                            <p class="card-text">@Model.RecoveryCodesLeft codes remaining</p>
                            <form method="post" asp-page-handler="GenerateRecoveryCodes">
                                <button type="submit" class="btn btn-primary">Generate New Codes</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <h5>Disable 2FA</h5>
                <p class="text-muted">Disabling 2FA will make your account less secure. Are you sure?</p>
                <form method="post" asp-page-handler="Disable2fa">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-shield-x me-2"></i>Disable 2FA
                    </button>
                </form>
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                <h5 class="alert-heading"><i class="bi bi-shield-exclamation me-2"></i>2FA is Disabled</h5>
                <p>Two-factor authentication adds an extra layer of security to your account. We strongly recommend enabling it.</p>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Get Started with 2FA</h5>
                    <p class="card-text">Protect your account by enabling two-factor authentication. You'll need an authenticator app on your phone.</p>
                    
                    <h6 class="mt-3">Recommended Authenticator Apps:</h6>
                    <ul>
                        <li>Microsoft Authenticator</li>
                        <li>Google Authenticator</li>
                        <li>Authy</li>
                        <li>1Password</li>
                    </ul>
                    
                    <a asp-page="./EnableAuthenticator" class="btn btn-success">
                        <i class="bi bi-shield-plus me-2"></i>Enable 2FA
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}