    "ClientId": "scalar-openapi-client",
    "AuthorizationUrl": "https://localhost:7222/connect/authorize",
    "TokenUrl": "https://localhost:7222/connect/token",
    "RefreshUrl": "https://localhost:7222/connect/token",
